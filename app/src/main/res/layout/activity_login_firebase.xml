<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth_firebase.LoginFirebaseActivity">

    <ImageView
        android:id="@+id/iv_login_logo_stta"
        android:layout_width="@dimen/dimen_two_hundred"
        android:layout_height="@dimen/dimen_two_hundred"
        android:layout_marginTop="@dimen/dimen_one_hundred_eighty"
        android:src="@drawable/ic_logo_tf_stta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_google_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_twenty_four"
        app:layout_constraintTop_toBottomOf="@id/iv_login_logo_stta" />

</androidx.constraintlayout.widget.ConstraintLayout>